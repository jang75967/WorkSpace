<UserControl
    x:Class="CustomContrl.LabelTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomContrl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <StackPanel Width="Auto" Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <TextBlock VerticalAlignment="Center" Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBox HorizontalAlignment="Stretch" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </StackPanel>
</UserControl>
